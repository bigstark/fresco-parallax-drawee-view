<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.bigstark.fresco.parallax.SampleActivity">

    <Button
        android:id="@+id/btn_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_menu_range"
        />

    <Button
        android:id="@+id/btn_recycler_forward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_menu_recycler_forward"
        />

    <Button
        android:id="@+id/btn_recycler_opposite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_menu_recycler_opposite"
        />

</LinearLayout>

